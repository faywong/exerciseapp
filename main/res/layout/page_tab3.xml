<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:gravity="top|center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.26"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brightness_small" />

        <SeekBar
            android:id="@+id/ctrl_skbProgress"
            android:layout_width="417dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxHeight="8dip"
            android:minHeight="8dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:progressDrawable="@drawable/seek_drawable"
            android:thumb="@drawable/seek_thumb" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/brightness_big" />
    </LinearLayout>

</LinearLayout>